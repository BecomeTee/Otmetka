@page "/Attendance"
@using System.Net.Http
@using System.Net.Http.Json
@using System.Net
@using System.Threading.Tasks
@inject HttpClient Http

<h1>Присутствия: </h1>
@if (attendance != null && attendance.Any())
{
    <table class="table table-bordered">
        <thead style="background-color: #f2f2f2; text-align: center">
            <tr>
                <th style="text-align: center;">Студент</th>
                <th style="text-align: center;">Занятие</th>
                <th style="text-align: center;">Присутствие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var attend in attendance)
            {
                <tr>
                    <td style="text-align: center;">@attend.Id_student</td>
                    <td style="text-align: center;">@attend.Id_class</td>
                    <td style="text-align: center;">@attend.Attend</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Нет данных о присутствии.</p>
}

@code {
    private List<AttendDto> attendance;
    private List<ClassDto> classes;
    protected override async Task OnInitializedAsync()
    {
        attendance = await Http.GetFromJsonAsync<List<AttendDto>>("https://localhost:7112/api/Attend");
    }
}